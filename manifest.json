{
  "manifest_version": 3,
  "name": "RevuLink",
  "version": "1.0",
  "description": "AI-powered product sentiment analysis",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "http://127.0.0.1:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Analyze Product"
  },
  "content_scripts": [
    {
      "matches": ["*://www.amazon.in/*", "*://www.flipkart.com/*", "*://www.amazon.com/*"],
      "js": ["content.js"]
    }
  ]
}
